{% import "_includes/forms" as forms %}

{% do view.registerAssetBundle("adwise\\tracedock\\assetbundles\\tracedock\\TracedockAsset") %}

{{ forms.lightswitchField({
    label:        "Active",
    instructions: "This switch activate/de-activate the javascript snippet",
    id:           'active',
    name:         'active',
    on:           settings.active,
    errors:       settings.getErrors('active')})
}}

{{ forms.textField({
    label: 'Tracedock domain',
    instructions: 'Enter your domain here (E.g. example.com).',
    id: 'domain',
    name: 'domain',
    value: settings['domain']})
}}

{{ forms.textField({
    label: 'Tracedock URL',
    instructions: 'Enter your custom Tracedock URL here (E.g. https://fjar.example.com/fluj.js).',
    id: 'url',
    name: 'url',
    value: settings['url'],
    errors: settings.getErrors('url')})
}}
